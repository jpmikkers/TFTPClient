<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>Baksteen.Net.TFTP.Client</RootNamespace>
    <AssemblyName>Baksteen.Net.TFTP.Client</AssemblyName>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <AssemblyTitle>Baksteen TFTP Client Library</AssemblyTitle>
    <Company>JPMikkers</Company>
    <Product>Baksteen TFTP Client Library</Product>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
	<PackageTags>tftp;tftp-protocol;tftp-client;windows;linux</PackageTags>
	<Version>1.1.0</Version>
    <Authors>jpmikkers</Authors>
    <Copyright>Copyright © 2025 Jean-Paul Mikkers</Copyright>
	<Description>multiplatform trivial file transfer protocol (TFTP) client library</Description>
	<RepositoryType>git</RepositoryType>
	<RepositoryUrl>https://github.com/jpmikkers/TFTPClient.git</RepositoryUrl>
	<PackageProjectUrl>https://github.com/jpmikkers/TFTPClient</PackageProjectUrl>
	<PackageReleaseNotes>Target net8</PackageReleaseNotes>
	<PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>
  <ItemGroup>
    <None Include="Docs\readme.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>